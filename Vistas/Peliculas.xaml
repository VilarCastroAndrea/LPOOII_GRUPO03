        <Button Name="btnElimarPelicula" Content="Eliminar Pelicula" HorizontalAlignment="Left" Margin="269,20,0,0" VerticalAlignment="Top" Width="108" Height="23" Background="White" BorderBrush="#FFB4B4B4" FontSize="14"/>
        <StackPanel Name="stackPanelPelicula"  x:FieldModifier="public" HorizontalAlignment="Left" Height="476" Margin="10,77,0,0" VerticalAlignment="Top" Width="930" Background="White">

        </StackPanel>



    </Grid>
</UserControl>
