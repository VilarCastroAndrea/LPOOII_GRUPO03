<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Vistas.styles">
    
    <!-- Template botones Form Pelicula -->
    <ControlTemplate x:Key="btnPeliculaPlantilla" TargetType="{x:Type Button}">
        <Border x:Name="btn_size_1" BorderBrush="#FFDDDDDD" BorderThickness="1" CornerRadius="5" Background="#FF011316">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <ContentPresenter Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Foreground" Value="#FF001303"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Background" Value="Green" TargetName="btn_size_1"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- Estilo botones Form Pelicula + Template con trigger-->
    <Style x:Key="btnPeliculaEstilo" TargetType="{x:Type Button}">
        <Setter Property="Height" Value="20"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Template" Value="{StaticResource btnPeliculaPlantilla}"/>
    </Style>
</ResourceDictionary>