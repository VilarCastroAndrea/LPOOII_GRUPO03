<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:svc="clr-namespace:ClasesBase;assembly=ClasesBase"
                    xmlns:local="clr-namespace:Vistas.styles">

    <ObjectDataProvider x:Key="DATA_CLIENT"
                            ObjectType="{x:Type svc:TrabajarClientes}"
                            MethodName="TraerCliente">
    </ObjectDataProvider>

    <ObjectDataProvider x:Key="DATA_CLIENT_MOD"
                            ObjectType="{x:Type svc:TrabajarClientes}"
                            MethodName="TraerCliente2">
        <ObjectDataProvider.MethodParameters>0</ObjectDataProvider.MethodParameters>
    </ObjectDataProvider>


    <ControlTemplate x:Key="TextBoxErrorTemplate">
        <DockPanel>
            <Ellipse DockPanel.Dock="Right" Margin="135,5" Width="10" Height="10">
                <Ellipse.Fill>
                    <LinearGradientBrush>
                        <GradientStop Color="#11FF1111" Offset="0"/>
                        <GradientStop Color="#FFFF0000" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </DockPanel>
    </ControlTemplate>

    <!-- TextBox CUSTOM -->
    <Style x:Key="TextBoxCustom" TargetType="TextBox">
        <Setter Property="Margin" Value="4,4,10,4"/>

        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
        <Setter Property="TextWrapping" Value="Wrap"/>
        <Setter Property="Background" Value="#FF02090A"/>
        <Setter Property="BorderBrush" Value="#FF04191B"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Height" Value="23"/>
        <Setter Property="Width" Value="132"/>
        <Setter Property="Validation.ErrorTemplate"
                    Value="{StaticResource TextBoxErrorTemplate}"/>
        <Style.Triggers>
            <Trigger Property="Validation.HasError" Value="True">
                <Setter Property="ToolTip">
                    <Setter.Value>
                        <Binding Path="(Validation.Errors)[0].ErrorContent"
                                     RelativeSource="{x:Static RelativeSource.Self}"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>