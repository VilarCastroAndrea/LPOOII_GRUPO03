        <Label Content="Nombre" HorizontalAlignment="Left" Margin="32,104,0,0" VerticalAlignment="Top" Foreground="White" Height="26" Width="54"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="31,135,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="145" Background="#FF02090A" BorderBrush="#FF04191B" Foreground="White"/>
