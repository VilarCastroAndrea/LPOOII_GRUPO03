<UserControl x:Class="Vistas.UserControl.Usuario.WPFUsuario"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vistas.UserControl.Usuario"
             mc:Ignorable="d" 
             d:DesignHeight="490" d:DesignWidth="760">
    <Grid>
        <!--Fondo de la ventana-->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF042A30"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <!--Panel de Usuario-->
        <Grid Name="panelUsuario" Height="420" Margin="20,40,25,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <!--Botones de navegación-->
        <Button Name="btnMostrarUsuario" Style="{StaticResource BotonModificar}" Content="Mostrar" Click="BtnMostrarUsuario_Click" />
        <Button Name="btnAltaAltaUsuario" Style="{StaticResource BotonAlta}" Margin="120,20,0,0" Click="BtnAltaAltaUsuario_Click" />
        <Button Name="btnListarUsuario" Style="{StaticResource BotonModificar}" Content="Listar" Margin="220,20,0,0" Background="#FF071B1F" BorderBrush="#FF071B1F" Click="BtnListarUsuario_Click" />
    </Grid>
</UserControl>
