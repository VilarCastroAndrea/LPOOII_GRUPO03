        </FlowDocumentReader>
        <Grid>
            <Button x:Name="btnPrint" Style="{StaticResource BotonCustom}" Content="Imprimir" Click="btnPrint_Click" Margin="210,-92,0,0"/>

        </Grid>

    </StackPanel>
