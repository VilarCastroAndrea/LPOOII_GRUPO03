<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vistas"
             xmlns:svc="clr-namespace:ClasesBase;assembly=ClasesBase"
             xmlns:fa="http://schemas.fontawesome.io/icons/" x:Class="Vistas.WPFCliente"
             mc:Ignorable="d" 
             d:DesignHeight="490" d:DesignWidth="760">

    <UserControl.Resources>
        <ObjectDataProvider
            ObjectType="{x:Type svc:TrabajarCliente}"
            MethodName="obtenerClientes"
            x:Key="listar_Clientes"
         />
    </UserControl.Resources>


    <Grid Height="490" Width="760">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF042A30"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid Name="panelCliente" Height="420" Width="200" Margin="20,40,540,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>

        <!--
        <Button Name="btnAlta" Content="Agregar" HorizontalAlignment="Left" Margin="31,370,0,0" VerticalAlignment="Top" Width="145" Foreground="White" Background="#FF040303" BorderBrush="#FF04191B" Click="BtnAlta_Click"/>
         <TextBox Name="txtDni" HorizontalAlignment="Left" Height="23" Margin="32,76,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="144" Background="#FF02090A" BorderBrush="#FF04191B" Foreground="White" PreviewTextInput="TextBox_PreviewTextInput"/>
        -->
        <Grid  HorizontalAlignment="Left" Height="405" Margin="238,55,0,0" VerticalAlignment="Top" Width="502" Background="Black">
            <ListView  Name="Clientes"  ItemsSource="{Binding Source={StaticResource listar_Clientes}, UpdateSourceTrigger=Explicit}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Width="80" Header="Dni" DisplayMemberBinding="{Binding Path=CLI_DNI}"/>
                        <GridViewColumn Width="100" Header="Nombre" DisplayMemberBinding="{Binding Path=CLI_Nombre}"/>
                        <GridViewColumn Width="80" Header="Apellido" DisplayMemberBinding="{Binding Path=CLI_Apellido}"/>
                        <GridViewColumn Width="100" Header="Telefono" DisplayMemberBinding="{Binding Path=CLI_Telefono}"/>
                        <GridViewColumn Width="130" Header="Email" DisplayMemberBinding="{Binding Path=CLI_Email}"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
        <Button Name="btnModificarCliente" Style="{StaticResource BotonModificar}" Click="BtnModificarCliente_Click"/>
        <Button Name="btnAltaCliente" Style="{StaticResource BotonAlta}" Margin="120,20,0,0" Click="BtnAltaCliente_Click"/>
        <GroupBox Header="Buscar" HorizontalAlignment="Left" Height="35" Margin="240,15,0,0" VerticalAlignment="Top" Width="500" Foreground="White">
            <Button Name="btnActualizar" Content="actualizar" HorizontalAlignment="Left" Height="17" Margin="50,-6,0,0" VerticalAlignment="Top" Width="91" Click="BtnActualizar_Click"/>
        </GroupBox>

    </Grid>
</UserControl>
